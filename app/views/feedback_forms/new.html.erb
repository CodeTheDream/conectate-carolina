<div class="container">
  <div class="col-lg-offset-4 col-lg-4" id="panel">
    <h2>Get In Touch</h2>
  </div>
</div>
<div class="container">
  <%= form_for @feedback_form, :html => { :class => "form-horizontal" } do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, :required => false, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :required => false, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area(:message, size: '24x6', :required => true,
                                class: 'form-control') %>
    </div>


    <div class="hidden">
      <div class="form-group">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, hint: 'leave this field blank!', class: 'form-control' %>
      </div>
    </div>

    <%= f.button ('Send'),
        class: "btn btn-success",
        data:{disable_with: "<i class='fa fa-spinner fa-pulse fa-lg fa-fw'></i> Sending..."}%>
  <% end %>
</div>
