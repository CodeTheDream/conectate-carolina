<h1> New Question </h1>
<div class="container">
  <%= form_for @question do |f| %>
    <div class="form-group required">
      <%= f.label :question %>
      <%= f.text_field :question %>
    </div>

    <div class="form-group required">
      <%= f.label :answer %>
      <%= f.text_area :answer %>
    </div>

    <div class="form-group required">
      <%= f.label :pregunta %>
      <%= f.text_field :pregunta %>
    </div>

    <div class="form-group required">
      <%= f.label :respuesta %>
      <%= f.text_area :respuesta %>
    </div>

    <%= f.submit "Create Question"%>
  <% end %>
</div>
