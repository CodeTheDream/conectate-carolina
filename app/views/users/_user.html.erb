<% @users.each do |user| %>
  <tr>
    <td>
      <p>
        <%= link_to user.email, user %>
      </p>
    </td>
    <td>
      <%= form_for user do |f| %>
      <%# render "shared/errors", object: user %>
      <%= f.select(:role, User.roles.keys.map {|role| [role.titleize, role]}) %>
      <%# f.select(:role, ["Other User", "Other User"]) %>
      <td>
        <button><%= f.submit 'Change role' %></button>
      </td>
      <% end %>
    </td>
    <td>
      <%= link_to("Delete user", user_path(user), data: {confirm: "Are you sure?"},
      method: :delete, class: 'button') unless user == current_user %>
    </td>
  </tr>
<% end %>
