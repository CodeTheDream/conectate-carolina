<% content_for :title do %><%= (t'category.all_cat') %> | Conectate Carolina<% end %>
<div class="container">
  <div class="organizations-title">
    <h1 id="organizations" style="text-align: center;"><%= (t'footer.categories')%></h1>
  </div>

  <!-- uncomment when pagination gem is added -->
  <%#= will_paginate %>
<% @categories.each do |category| %>
    <div class="row">
      <div class="well col-md-4 center-block">
      <ul class="list-group">
        <li class="list-group-item">
          <% if params[:locale] == "en" %>
            <%= link_to category do %>
              <%= fa_icon category.fa_name, text: category.name, left: true %>
            <% end %>
          <% else %>
            <%= link_to category do %>
              <%= fa_icon category.fa_name, text: category.categoria, left: true %>
            <% end %>
          <% end %>
        </li>
        <li class="list-group-item"><small>
        <% if params[:locale] == "en" %>
            <%= pluralize(category.agencies.count, "organization") %>
        <% else %>
            <%= pluralize(category.agencies.count, "organizaciÃ³n") %>
        <% end %>
        </small></li>
      </ul>
      <div class="btn-group btn-group-sm">
      <tr>
          <% if policy(Category).new? %>
            <td>
              <%= link_to "Delete", category_path(category), method: :delete %>
              <%= link_to edit_category_path(category), class: 'btn btn-info' do %>
              <i class="fa fa-pencil-square-o"></i><%= (t'buttons_t.edit')%>
              <% end %>
            </td>
          <% end %>
      </tr>
      </div>
      </div>
    </div>
<% end %>
<%#= will_paginate %>
</div>

