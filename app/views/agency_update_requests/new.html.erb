<h1 class="text-center" style="margin-top: 45px;"><%= (t'new_page.h2')%></h1>
<div class="d-flex justify-content-between">
  <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
    <label><strong style="color: red;"> *</strong> = Required fields</label>
    <div class="panel panel-info">
      <div class="panel-heading">
          <div class="panel-title"><%= (t'new_page.fill_fields') %></div>
          <div style="float:right; font-size: 85%; position: relative; top:-10px"></div>
      </div>
      <div class="panel-body pb-2">
        <div class="individual-import">
          <%= form_for [:agency, @agency_update_request], :html => { :class => "form-horizontal" }, url: agency_agency_update_requests_path do |f| %>
            <% if not @agency_update_request.nil? and @agency_update_request.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@agency_update_request.errors.count, "error") %> prohibited this agency from being saved:</h2>
                <ul>
                  <% @agency_update_request.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group required">
              <%= f.label "Name", class: 'required control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.text_field :name, value: @agency.name, class: 'input-md  textinput textInput form-control' %>
              </div>
            </div>
            <div class="form-group required">
              <%= f.label "Nombre", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.text_field :nombre, value: @agency.nombre, class: 'input-md  textinput textInput form-control' %>
              </div>
            </div>
            <div class="form-group required">
              <%= f.label "Address", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.text_field :address, value: @agency.address, class: 'input-md  textinput textInput form-control' %>
              </div>
            </div>
            <div class="form-group required">
              <%= f.label "City", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.text_field :city, value: @agency.city, class: 'input-md  textinput textInput form-control' %>
              </div>
            </div>
            <div class="form-group required">
              <%= f.label "State", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.text_field :state, value: @agency.state, class: 'input-md  textinput textInput form-control' %>
              </div>
            </div>
            <div class="form-group required">
              <%= f.label "Zip Code", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.text_field :zipcode, value: @agency.zipcode, class: 'input-md  textinput textInput form-control' %>
              </div>
            </div>
            <div class="form-group required">
              <%= f.label "County", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.text_field :county, value: @agency.county, class: 'input-md  textinput textInput form-control' %>
              </div>
            </div>
            <div class="form-group required">
              <%= f.label "Contact Person", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.text_field :contact, value: @agency.contact, class: 'input-md  textinput textInput form-control' %>
              </div>
            </div>
            <div class="form-group required">
              <%= f.label "Email", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.text_field :email, value: @agency.email, class: 'input-md  textinput textInput form-control' %>
              </div>
            </div>
            <div class="form-group required">
              <%= f.label "Phone", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.telephone_field :phone, value: @agency.phone, class: 'input-md  textinput textInput form-control' %>
              </div>
            </div>
            <div class="form-group required">
              <%= f.label "Cell Phone", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.telephone_field :mobile_phone, value: @agency.mobile_phone, class: 'input-md  textinput textInput form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label "Description", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.text_area(:description, value: @agency.description, class: 'input-md  textinput textInput form-control') %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label "Descripcion(es)", class: 'control-label col-md-4' %>
              <div class="controls col-md-8">
                <%= f.text_area(:descripcion, value: @agency.descripcion, class: 'input-md  textinput textInput form-control') %>
              </div>
            </div>
            <div class="col-md-offset-3 jumbotron jumbotron-fluid" style="background-color: white;">
              <div class="form-group">
                <%= f.label :submitted_by, class: 'required control-label col-md-4' %>
                <div class="controls col-md-8">
                  <%= f.text_field(:submitted_by, class: 'input-md  textinput textInput form-control') %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label "Email", class: 'required control-label col-md-4' %>
                <div class="controls col-md-8">
                  <%= f.text_field(:submitter_email, class: 'input-md  textinput textInput form-control') %>
                </div>
              </div>
            </div>

            <div class="panel-inline-body">
              <%= link_to (t'buttons_t.back'), agency_update_requests_path, class: 'btn btn-primary' %>
              <%= f.button (t'buttons_t.submit'), class: "btn btn-primary btn-info"%><br>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
