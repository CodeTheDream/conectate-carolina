<div class="container">
  <div class="col-lg-offset-4 col-lg-4" id="panel">
    <h2>Get In Touch</h2>
  </div>
</div>
<div class="container">
<%= form_for @feedback_form, :html => { :class => "form-horizontal" } do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true, :required => false, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, :required => false, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :message, 'Leave your comments here...', size: '24x6',
                    :required => false, class: 'form-control' %>
  </div>

  <!-- <%= f.input :message, :as => :text, :required => false %> -->

  <div class="hidden">
    <%= f.input :nickname, :hint => 'Leave this field blank!' %>
  </div>
  <%= f.button :submit, 'Send message' %>
<% end %>
</div>
