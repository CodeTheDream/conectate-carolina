<h1>List of messages</h1>

<div class="messages">
  <% @messages.each do |message| %>
    <div class="message">
      <div class="row">
        <div class="controls col-md-10">
          <b><%= message.title %></b><br/>
          <%= message.body %>
        </div>
        <div class="controls col-md-2">
          <%= link_to "edit", edit_message_path(message) %> |
          <%= link_to "delete", message, method: :delete, data: { confirm: "You sure?" } %> |
          <% if message.posted? %>
            <%= button_to unpost_message_path(message), class: "btn btn-success", method: :get do %>
              <i class="fa fa-check-square"></i><%= (t'buttons_t.unpost')%>
            <% end %>
          <% else %>
            <%= button_to post_message_path(message), class: "btn btn-primary", method: :get do %>
              <i class="fa fa-square"></i><%= (t'buttons_t.post')%>
            <% end %>
          <% end %>
        </div>
      </div>
    </div><br/>
  <% end %>
</div><br/>

<div>
  <%= button_to "New Message", new_message_path, class: "btn btn-primary", method: :get %>
</div>
